<application>
  <component name="DefaultFont">
    <option name="FONT_SIZE" value="15" />
    <option name="FONT_SCALE" value="1.25" />
  </component>
  <component name="TodoConfiguration">
    <pattern pattern="\btodo\b.*" />
    <pattern pattern="\bfixme\b.*" />
    <pattern pattern="\btodo-bob\b.*" />
    <pattern pattern="\btodo-john\b.*" />
    <pattern pattern="\btodo-me\b.*" />
    <filter name="For John">
      <pattern index="3" />
    </filter>
    <filter name="For Bob">
      <pattern index="2" />
    </filter>
    <filter name="For me">
      <pattern index="4" />
    </filter>
  </component>
</application>